<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="1200.0" styleClass="MainScreenStyle.css" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainScreenController">
    <children>
        <MenuBar style="-fx-padding: 0 0 0 0;" stylesheets="@MainScreenStyle.css">
            <menus>
                <Menu mnemonicParsing="false" text="Action">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleNewAssumption" text="New Assumption"/>
                        <MenuItem mnemonicParsing="false" onAction="#newAnalysis" text="New Analysis"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#openFromFile" text="Open Configuration…"/>
                        <Menu mnemonicParsing="false" onAction="#openRecent" text="Open Recent Configuration"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#saveToFile" text="Save Configuration"/>
                        <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Save Configuration As…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferences…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#handleQuit" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo"/>
                        <MenuItem mnemonicParsing="false" text="Redo"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Cut"/>
                        <MenuItem mnemonicParsing="false" text="Copy"/>
                        <MenuItem mnemonicParsing="false" text="Paste"/>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Select All"/>
                        <MenuItem mnemonicParsing="false" text="Unselect All"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openDocumentation" text="Documentation"/>
                    </items>
                </Menu>
            </menus>
            <styleClass>
                <String fx:value="BarBackground"/>
                <String fx:value="LabelBar"/>
            </styleClass>
        </MenuBar>
        <SplitPane dividerPositions="0.9" orientation="VERTICAL" prefHeight="643.0" prefWidth="1000.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <TitledPane collapsible="false" styleClass="CustomTitledPane" stylesheets="@MainScreenStyle.css"
                                    text="Assumptions" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <TableView fx:id="assumptionTableView" prefHeight="200.0" prefWidth="200.0">
                                    <placeholder>
                                        <Label text="No Assumptions specified"/>
                                    </placeholder>
                                    <columns>
                                        <TableColumn fx:id="idColumn" editable="false" prefWidth="100.0" text="ID"/>
                                        <TableColumn fx:id="typeColumn" editable="false" prefWidth="100.0" text="Type"/>
                                        <TableColumn fx:id="entitiesColumn" editable="false" prefWidth="100.0"
                                                     text="Entities"/>
                                        <TableColumn fx:id="dependenciesColumn" editable="false" prefWidth="125.0"
                                                     text="Dependencies"/>
                                        <TableColumn fx:id="descriptionColumn" editable="false" prefWidth="150.0"
                                                     text="Description"/>
                                        <TableColumn fx:id="violationProbabilityColumn" editable="false"
                                                     prefWidth="150.0" text="Violation Probability"/>
                                        <TableColumn fx:id="riskColumn" editable="false" prefWidth="100.0" text="Risk"/>
                                        <TableColumn fx:id="impactColumn" editable="false" prefWidth="100.0"
                                                     text="Impact"/>
                                        <TableColumn fx:id="analyzedColumn" editable="false" prefWidth="75.0"
                                                     text="Analyzed"/>
                                    </columns>
                                </TableView>
                            </content>
                        </TitledPane>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                    <children>
                        <TitledPane collapsible="false" styleClass="CustomTitledPane" stylesheets="@MainScreenStyle.css"
                                    text="Analysis Output" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                            style="-fx-padding: 0;">
                                    <children>
                                        <TextArea fx:id="analysisOutputTextArea" editable="false"
                                                  styleClass="OutputTextArea" stylesheets="@MainScreenStyle.css"
                                                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                                    </children>
                                </AnchorPane>
                            </content>
                        </TitledPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
        <GridPane alignment="BASELINE_CENTER" stylesheets="@MainScreenStyle.css" VBox.vgrow="NEVER">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label fx:id="analysisPathLabel" onMouseClicked="#handleAnalysisPathSelection" styleClass="ClickableLabel"
                   stylesheets="@MainScreenStyle.css" text="No analysis URI specified" wrapText="true"/>
            <Label fx:id="modelNameLabel" onMouseClicked="#handleModelNameSelection" styleClass="ClickableLabel"
                   stylesheets="@MainScreenStyle.css" text="No model folder selected" wrapText="true"
                   GridPane.columnIndex="2"/>
            <Button fx:id="performAnalysisButton" disable="true" mnemonicParsing="false"
                    onAction="#handleAnalysisExecution" text="Perform Analysis" GridPane.columnIndex="1"/>
            <styleClass>
                <String fx:value="BarBackground"/>
                <String fx:value="LabelBar"/>
            </styleClass>
        </GridPane>
    </children>
</VBox>
